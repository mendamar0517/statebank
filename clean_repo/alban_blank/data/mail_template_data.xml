<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="email_template_request_to_hr" model="mail.template">
            <field name="name">Тодорхойлолт бичүүлэх хүсэлт - ХН-д</field>
            <field name="model_id" ref="model_archive_request"/>
            <field name="subject">Тодорхойлолт бичүүлэх хүсэлт ирлээ: {{ object.request_employee_id.name }}</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p>Өдрийн мэнд,</p>
                    <p>Танд "Тодорхойлолт бичүүлэх" хүсэлт ирлээ.</p>
                    <ul>
                        <li><strong>Хаана, ямар байгууллагад:</strong> <t t-out="object.organization"/></li>
                        <li><strong>Зориулалт:</strong> <t t-out="object.about"/></li>
                        <li><strong>Хүсэлт илгээсэн ажилтан:</strong> <t t-out="object.request_employee_id.name"/></li>
                        <li><strong>Үүсгэсэн огноо:</strong> <t t-out="object.request_date"/></li>
                    </ul>
                    <p>Холбоос: <a t-att-href="'/web#id=%s&amp;model=archive.request&amp;view_type=form' % (object.id)">Энд дарж харна уу</a></p>
                </div>
            </field>
        </record>

        <record id="email_template_response_to_employee" model="mail.template">
            <field name="name">Тодорхойлолт олгосон мэдэгдэл</field>
            <field name="model_id" ref="model_archive_request"/>
            <field name="subject">Таны тодорхойлолт бэлэн боллоо</field>
            <field name="email_to">{{ object.request_employee_id.work_email }}</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p>Өдрийн мэнд,</p>
                    <p>Таны тодорхойлолтыг илгээсэн болно.</p>
                    <ul>
                        <li><strong>Хаана, ямар байгууллагад:</strong> <t t-out="object.organization"/></li>
                        <li><strong>Зориулалт:</strong> <t t-out="object.about"/></li>
                        <li><strong>ХН ажилтан:</strong> <t t-out="object.sender_employee_id.name"/></li>
                        <li><strong>Илгээсэн огноо:</strong> <t t-out="object.send_date"/></li>
                    </ul>
                    <p>Файлыг хавсралтаас эсвэл системээс татаж авна уу.</p>
                </div>
            </field>
        </record>
    </data>
</odoo>