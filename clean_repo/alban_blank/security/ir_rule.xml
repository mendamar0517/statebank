<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="rule_archive_request_personal" model="ir.rule">
            <field name="name">Зөвхөн өөрийн хүсэлтийг харах</field>
            <field name="model_id" ref="model_archive_request"/>
            <field name="domain_force">[('create_uid', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <record id="rule_print_template_personal" model="ir.rule">
            <field name="name">Зөвхөн өөрийн бүртгэсэн загварыг харах</field>
            <field name="model_id" ref="model_print_template"/>
            <field name="domain_force">[('create_uid', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="rule_blank_usage_personal" model="ir.rule">
            <field name="name">Зөвхөн өөрийн ашиглалтын бүртгэлийг харах</field>
            <field name="model_id" ref="model_blank_usage"/>
            <field name="domain_force">[('create_uid', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="rule_archive_request_hr_all" model="ir.rule">
            <field name="name">ХН Ажилтан бүх хүсэлтийг харах</field>
            <field name="model_id" ref="model_archive_request"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('hr.group_hr_user'))]"/>
        </record>

    </data>
</odoo>